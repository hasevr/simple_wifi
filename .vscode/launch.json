    "version": "0.2.0",
    "configurations": [
        {
            "type": "esp32-debug",
            "request": "launch",
            "name": "ActiveHaptic",
            "program": "${workspaceFolder}/build/ActiveHaptic.elf",
            "stopOnEntry": true,
            "msysDir": "C:\\msys32",
            "serverDir": ".",
            "serverExecutable": "openocd.exe",
            "openocdSearchDir": [
                "usr/share/openocd/scripts"
            ],
            "openocdConfigFiles": [
                "interface/ftdi/um232h.cfg",
                "board/esp-wroom-32.cfg"
            ],
            "debuggerDir": "./opt/xtensa-esp32-elf/bin",
            "debuggerExecutable": "xtensa-esp32-elf-gdb.exe",
        },
    ]
}